'use client';

import { useState, useEffect } from 'react';
import Image from "next/image";
import Link from 'next/link';
import { ArrowRightIcon } from '@heroicons/react/24/outline';
import { StarIcon } from '@heroicons/react/24/solid';
import { Film, Category } from '@/types/film';

export default function Home() {
  const [latestFilms, setLatestFilms] = useState<Film[]>([]);
  const [featuredCategories, setFeaturedCategories] = useState<Category[]>([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const fetchHomeData = async () => {
      try {
        setLoading(true);
        
        // 최신 영화 가져오기
        const filmsResponse = await fetch('/api/films?pageSize=8&sortBy=release_year&sortDirection=desc');
        const filmsData = await filmsResponse.json();
        
        // 카테고리 가져오기
        const categoriesResponse = await fetch('/api/categories');
        const categoriesData = await categoriesResponse.json();
        
        setLatestFilms(filmsData.data);
        // 상위 6개 카테고리만 표시 (영화 수가 많은 순)
        setFeaturedCategories(categoriesData
          .sort((a: any, b: any) => b.film_count - a.film_count)
          .slice(0, 6)
        );
      } catch (error) {
        console.error('홈페이지 데이터 로드 오류:', error);
      } finally {
        setLoading(false);
      }
    };
    
    fetchHomeData();
  }, []);

  return (
    <div className="min-h-screen">
      {/* 히어로 섹션 */}
      <section className="relative bg-gradient-to-r from-blue-600 to-purple-600 py-20 text-white">
        <div className="container mx-auto px-4">
          <div className="flex flex-col md:flex-row items-center">
            <div className="md:w-1/2 mb-8 md:mb-0">
              <h1 className="text-4xl md:text-5xl font-bold mb-4">
                Sakila 영화 대여 서비스에 오신 것을 환영합니다
              </h1>
              <p className="text-xl mb-8 max-w-lg">
                다양한 장르의 영화를 찾아보고 대여하세요. 최신 영화부터 클래식 명작까지 모두 준비되어 있습니다.
              </p>
              <Link
                href="/films"
                className="inline-flex items-center bg-white text-blue-600 font-semibold py-3 px-6 rounded-lg hover:bg-blue-50 transition-colors"
              >
                영화 둘러보기
                <ArrowRightIcon className="ml-2 h-5 w-5" />
              </Link>
            </div>
            <div className="md:w-1/2 grid grid-cols-2 gap-4">
              {!loading && latestFilms.slice(0, 4).map((film) => (
                <div key={film.film_id} className="relative h-40 rounded-lg overflow-hidden shadow-lg transform transition-transform hover:scale-105">
                  <Image
                    src={`https://placehold.co/300x450?text=${encodeURIComponent(film.title)}`}
                    alt={film.title}
                    fill
                    style={{ objectFit: 'cover' }}
                  />
                  <div className="absolute inset-0 bg-black bg-opacity-40 flex items-end p-3">
                    <div>
                      <h3 className="text-white font-semibold line-clamp-1">{film.title}</h3>
                      <div className="flex items-center mt-1">
                        <StarIcon className="h-4 w-4 text-yellow-400 mr-1" />
                        <span className="text-white text-xs">{film.rating}</span>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
              {loading && (
                <div className="col-span-2 flex items-center justify-center h-40">
                  <div className="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-white"></div>
                </div>
              )}
            </div>
          </div>
        </div>
      </section>

      {/* 카테고리 섹션 */}
      <section className="py-16 bg-gray-50">
        <div className="container mx-auto px-4">
          <h2 className="text-3xl font-bold mb-10 text-center">인기 카테고리</h2>
          
          {loading ? (
            <div className="flex justify-center items-center h-40">
              <div className="animate-spin rounded-full h-10 w-10 border-t-2 border-b-2 border-blue-500"></div>
            </div>
          ) : (
            <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
              {featuredCategories.map((category) => (
                <Link
                  key={category.category_id}
                  href={`/films?categoryId=${category.category_id}`}
                  className="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-center"
                >
                  <div className="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span className="text-blue-600 text-xl font-bold">{category.name.substring(0, 1)}</span>
                  </div>
                  <h3 className="font-semibold mb-1">{category.name}</h3>
                  <p className="text-sm text-gray-500">{category.film_count}편의 영화</p>
                </Link>
              ))}
            </div>
          )}
        </div>
      </section>

      {/* 최신 영화 섹션 */}
      <section className="py-16">
        <div className="container mx-auto px-4">
          <div className="flex justify-between items-center mb-10">
            <h2 className="text-3xl font-bold">최신 영화</h2>
            <Link href="/films" className="text-blue-600 hover:text-blue-800 font-medium flex items-center">
              모든 영화 보기
              <ArrowRightIcon className="ml-1 h-5 w-5" />
            </Link>
          </div>
          
          {loading ? (
            <div className="flex justify-center items-center h-60">
              <div className="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-500"></div>
            </div>
          ) : (
            <div className="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
              {latestFilms.map((film) => (
                <div key={film.film_id} className="bg-white rounded-lg shadow-md overflow-hidden">
                  <Link href={`/films/${film.film_id}`}>
                    <div className="relative h-56">
                      <Image
                        src={`https://placehold.co/300x450?text=${encodeURIComponent(film.title)}`}
                        alt={film.title}
                        fill
                        style={{ objectFit: 'cover' }}
                        className="transition-opacity"
                      />
                      <div className="absolute top-2 right-2">
                        <span className="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                          {film.rating}
                        </span>
                      </div>
                    </div>
                    <div className="p-4">
                      <h3 className="font-semibold text-lg line-clamp-1">{film.title}</h3>
                      <p className="text-gray-600 text-sm">{film.release_year}</p>
                      <div className="mt-2 flex justify-between items-center">
                        <span className="text-gray-900 font-semibold">${film.rental_rate.toFixed(2)}</span>
                        <span className="text-sm text-gray-500">{film.rental_duration}일 대여</span>
                      </div>
                    </div>
                  </Link>
                </div>
              ))}
            </div>
          )}
        </div>
      </section>
    </div>
  );
}
